@model IEnumerable<Employee>

<h2>Employee List</h2>

<table class="table table-bordered">
    <thead style="background-color: #aaa;">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Birth Date</th>
            <th>Position</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr style="background-color: @(employee.Id % 2 == 0 ? "#ccc" : "#eee");">
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.BirthDate.ToShortDateString()</td>
                <td>@employee.Position</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>